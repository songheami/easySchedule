{{>layout/header}}

<div id="groupJoin_wrapper">
    <a class="btn btn-primary" data-toggle="collapse" href="#collapse-insert-group" role="button" aria-expanded="false" aria-controls="collapse-insert-group">
        그룹 개설
    </a>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapse-join-group" role="button" aria-expanded="false" aria-controls="collapse-join-group">
        그룹 가입
    </a>
</div>

<div class="collapse" id="collapse-insert-group">
    <div class="card card-body">
        <form id="form-insert-group">
            <div class="form-group">
                <label for="name">그룹명</label>
                <input type="text" class="form-control" id="name" placeholder="그룹명을 입력하세요.">
                <button type="button" class="btn btn-primary" id="btn-insert-group">등록</button>
            </div>
        </form>
    </div>
</div>

<div class="collapse" id="collapse-join-group">
    <div class="card card-body">
        <form id="form-join-group">
            <div class="form-group">
                <label for="name">그룹명</label>
                <input type="text" class="form-control" id="name" placeholder="그룹명을 입력하세요.">
                <button type="button" class="btn btn-primary" id="btn-search-group">조회</button>
                <button type="button" class="btn btn-primary" id="btn-join-group">가입</button>
            </div>
            <table>
                <thead>
                <tr>
                    <th>선택</th>
                    <th>Group Name</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </form>
    </div>
</div>

{{>layout/footer}}