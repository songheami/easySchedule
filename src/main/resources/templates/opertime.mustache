{{>layout/header}}

<div class="title">가능한 시간을 입력해주세요</div>
<form class="form-opertime" onsubmit="return false;" method="post">
    <div id="opertime_wrapper">
        <div class="box">일</div>
        <div class="box sunOpertimeList">
            {{#sunOpertimeList}}
                <div class="input-box">
                    <input type="text" name="startTime" value="{{startTime}}" placeholder="00:00">
                    <input type="text" name="endTime" value="{{endTime}}" placeholder="00:00">
                    <input type="hidden" name="opertimeId" value="{{opertimeId}}">
                    <input type="hidden" name="dayCode" value="0">
                </div>
            {{/sunOpertimeList}}
            <button class="btn-add-opertime" id="btn-add-6"><i class="fas fa-plus"></i></button>
        </div>
        <div class="box">월</div>
        <div class="box monOpertimeList">
            {{#monOpertimeList}}
                <div class="input-box" id="{{opertimeId}}">
                    <input type="text" name="startTime" value="{{startTime}}" placeholder="00:00">
                    <input type="text" name="endTime" value="{{endTime}}" placeholder="00:00">
                    <input type="hidden" name="opertimeId" value="{{opertimeId}}">
                    <input type="hidden" name="dayCode" value="1">
                </div>
            {{/monOpertimeList}}
            <button class="btn-add-opertime" id="btn-add-0"><i class="fas fa-plus"></i></button>
        </div>
        <div class="box">화</div>
