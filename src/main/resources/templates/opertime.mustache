                    <input type="hidden" name="opertimeId" value="{{opertimeId}}">
                    <input type="hidden" name="dayCode" value="2">
                </div>
            {{/tueOpertimeList}}
            <button class="btn-add-opertime" id="btn-add-1"><i class="fas fa-plus"></i></button>
        </div>
        <div class="box">수</div>
        <div class="box wedOpertimeList">
            {{#wedOpertimeList}}
